@model IEnumerable<ToDo_list.Models.ToDoList>

@{
    ViewData["Title"] = "Index";

}

<h1>The Pendings</h1>

<div>
     @Html.ActionLink("Add New", "Create", "ToDo", routeValues: null, htmlAttributes: new {@class="btn btn-info btn-md", style="white-space: normal" })

</div>
    

 
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
         
       
           
        <tr>
            <td>
               @*@Html.DisplayFor(modelItem => item.Detail)*@
               @item.Detail
            </td>
            <td>
            @Html.ActionLink("Edit", "Edit", "ToDo", new{id=@item.Id}, htmlAttributes: new {@class="btn btn-warning btn-md", style="white-space: normal" })
              @Html.ActionLink("Delete", "Delete", "ToDo", new{id=@item.Id}, htmlAttributes: new {@class="btn btn-danger btn-md", style="white-space: normal" })
          
            </td>
        </tr>
}
    </tbody>
</table>
